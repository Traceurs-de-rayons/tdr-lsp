{
  "name": "tdr-scene-language",
  "displayName": "TDR Scene Language Support",
  "repository": "https://github.com/Traceurs-de-rayons/tdr-lsp.git",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:tdr",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tdr",
        "extensions": [
          ".tdr",
          ".traceurs-de-rayons",
          ".paf"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "tdr-obj",
        "extensions": [".obj"],
        "configuration": "./language-configuration.obj.json"
      }
    ],
    "grammars": [
      {
        "language": "tdr",
        "scopeName": "text.tdr",
        "path": "./syntaxes/tdr.tmLanguage.json"
      },
      {
        "language": "tdr-obj",
        "scopeName": "source.tdr-obj",
        "path": "./syntaxes/tdr-obj.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "tdr-icons",
        "label": "TDR File Icons",
        "path": "./fileicons/tdr-icon-theme.json"
      }
    ]
  },
  "files": [
    "out/**",
    "syntaxes/**",
    "language-configuration.json",
    "bin/**",
    "node_modules/**",
    "icons/**",
    "fileicons/**",
    "LICENSE.md"
  ],
  "scripts": {
    "compile": "tsc -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  }
}