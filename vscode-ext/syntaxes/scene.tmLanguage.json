
{
  "scopeName": "text.scene",
  "patterns": [
    {
      "name": "meta.tag.scene",
      "begin": "<([a-zA-Z][a-zA-Z0-9_-]*)",
      "beginCaptures": {
        "1": { "name": "entity.name.tag.scene" }
      },
      "end": ">",
      "patterns": [
        {
          "name": "entity.other.attribute-name.scene",
          "match": "[a-zA-Z][a-zA-Z0-9_-]*"
        },
        {
          "name": "string.quoted.double.scene",
          "begin": "\"",
          "end": "\""
        }
      ]
    },
    {
      "name": "meta.tag.close.scene",
      "match": "</([a-zA-Z][a-zA-Z0-9_-]*)>",
      "captures": {
        "1": { "name": "entity.name.tag.scene" }
      }
    }
  ]
}